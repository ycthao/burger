<h1>Eat-Da-Burger!</h1>

<img src="/assets/img/burger.png" width="350" height="200">


<h2>Burger not eaten</h2>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  <li>
      <p>Burger name: {{this.burger_name}} 
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Devoured{{else}}Devour it!{{/if}}
	</button>
      </p>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>burger eaten</h2>

<ul>
  {{#each burger}}
  {{#if devoured}}
  <li>
      <p>Burger name: {{this.burger_name}} 
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Devoured{{else}}Devour it!{{/if}}
	</button>
      </p>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" burger_name="burger_name">
  </div>


  <button type="submit">Add burger</button>
</form>
